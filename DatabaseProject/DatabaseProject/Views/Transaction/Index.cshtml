@model IEnumerable<DatabaseProject.Transaction>

@using System.Globalization;

@{
    ViewBag.Title = "Transactions";
}


<h2>Transactions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TransDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankAccount.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reconciled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckNum)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TransDate.ToString("d", DateTimeFormatInfo.InvariantInfo))
        </td>
        <td>
            <!--
            if(item.Amount <0) {
                print "\-$" . item.Amount*-1;
            } else{
                print "\$" . item.Amount;
            }
            -->

            $@Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BankAccount.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reconciled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckNum)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PrimaryKey }) |
            @Html.ActionLink("Details", "Details", new { id=item.PrimaryKey }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PrimaryKey })
        </td>
    </tr>
}

</table>
