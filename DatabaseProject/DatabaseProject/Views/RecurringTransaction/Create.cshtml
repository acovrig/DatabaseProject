    @Html.ValidationSummary(true)

    <fieldset>
        <legend>RecurringTransaction</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExpectedAmount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExpectedAmount)
            @Html.ValidationMessageFor(model => model.ExpectedAmount)
        </div>

